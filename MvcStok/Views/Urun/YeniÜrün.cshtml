@model MvcStok.Models.Entity.tbl_Urunler

@{
    ViewBag.Title = "YeniÜrün";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-check">
    <div>
        <label>ÜRÜN ADI</label>
        <input type="text" class="form-control" name="URUNAD" placeholder="Ürün Adını Giriniz" required="" />
    </div>
    <div>
        <label>MARKA</label>
        <input type="text" class="form-control" name="MARKA" placeholder="Ürün Markasını Giriniz" required=""/>
    </div>
    <div>
        <label>KATAGORİ</label>
       @*@Html.DropDownListFor<m => m.KATAGORİID,(List(SelectListiItem)Vievbag.)>*@
        @Html.DropDownListFor(m => m.tbl_katagori.KATAGORIID,(List<SelectListItem>)ViewBag.der,new { @class = "form-control" } )
    </div>
    <div>
        <label>FİYAT</label>
        <input type="text" class="form-control" name="URUNFİYAT" placeholder="Ürün Fiyatını Giriniz" />
    </div>
    <div>
        <label>STOK</label>
        <input type="text" class="form-control" name="STOK" placeholder="Ürün Stoğunu Giriniz" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Ürün Ekle</button>
    </div>
    <script>
        $("#btn1").click(function () {
            alert("Ürün ekleme işlemi yapıldı !!!");
        });
    </script>


</form>

